{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "program": "${workspaceFolder}/server.js",
      "args": [],
      "runtimeArgs": [],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "restart": true,
      "timeout": 10000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}